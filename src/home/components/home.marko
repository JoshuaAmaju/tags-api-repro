import { push, pop, splice } from '../utils'

<let/arr=[]/>
<let/lastId=0/>

<style>
    li::before {
        content: "counter: " attr(data-count);
    }
</style>

<effect() {
    console.log(arr)
} />
<ul>
    <for|id, i| of=arr by=(id => id)>
        <let/count=0/>

        <effect() {
            console.log('i', id)
        } />

        <li data-count=id>
            <p>${count}</p>

            <button onClick() {
                count--;
            }>-</button>

            <button onClick() {
                count++;
            }>+</button>

            <button onClick() {
                console.log(id);
                arr = splice(arr, i, 1);
            }>remove</button>
        </li>
    </for>
</ul>


<button onClick() {
    arr = pop(arr);
}>-</button>

<button onClick() {
    arr = push(arr, lastId++)
}>+</button>

